<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include android:id="@+id/top_layout" layout="@layout/common_top_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="38dp"
            android:scaleType="fitXY"
            android:src="@mipmap/iv_splash"
            android:layout_marginLeft="49px"
            android:layout_marginTop="38px"
            android:layout_height="38dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="38px"
            android:layout_marginLeft="24px"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="关于瑜伽课程的投诉"
                android:textColor="#2D2D2D"
                android:textSize="30px"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="2018-01-02"
                android:textColor="#2D2D2D"
                android:textSize="24px"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginRight="39px"
        android:layout_marginTop="45px"
        android:text="关于瑜伽课程的投诉关于瑜伽课程的.关于伽课程的投诉关于瑜伽课程的.关于瑜伽课的投诉关于瑜伽课程的."
        android:textColor="#2D2D2D"
        android:textSize="30px"
        android:layout_height="wrap_content" />
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_marginTop="33px"
        android:layout_marginRight="39px"
        android:layout_height="wrap_content"></com.github.jdsjlzx.recyclerview.LRecyclerView>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="23px"
        android:layout_marginTop="43px"
        android:layout_marginRight="19px"
        android:background="#1C1C1C"
        android:layout_height="wrap_content"></com.github.jdsjlzx.recyclerview.LRecyclerView>

</LinearLayout>

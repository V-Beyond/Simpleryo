<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_hot_course"
    android:orientation="vertical">

    <include layout="@layout/common_top_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="365px">
        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="365px" />
        <TextView
            android:id="@+id/tv_order_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56px"
            android:layout_marginTop="56px"
            android:text="Private Yoga"
            android:textColor="@color/color_ffffff"
            android:textSize="47px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="93px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="10px"
                android:layout_height="41px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="56px"
                android:background="#F32E59" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14px"
                android:text="订单号：35657687889"
                android:textColor="#373737"
                android:textSize="38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56px"
                android:layout_marginRight="56px"
                android:layout_marginTop="34px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单总金额"
                    android:textColor="#373737"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="340$"
                    android:textColor="#F32E59"
                    android:textSize="33px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56px"
                android:layout_marginRight="56px"
                android:layout_marginTop="28px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程单价"
                    android:textColor="#373737"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="100$"
                    android:textColor="#777777"
                    android:textSize="33px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="38px"
                android:layout_marginLeft="56px"
                android:layout_marginRight="56px"
                android:layout_marginTop="27px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textColor="#373737"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="X3"
                    android:textColor="#777777"
                    android:textSize="33px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:layout_marginBottom="56px"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="10px"
                android:layout_height="41px"
                android:layout_marginLeft="56px"
                android:background="#F32E59" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14px"
                android:text="课程名称：瑜伽"
                android:textColor="#373737"
                android:textSize="35px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41px"
                android:background="@mipmap/iv_join"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="线下授课"
                android:textColor="@color/color_ffffff"
                android:textSize="21px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_coach_img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:layout_marginTop="68px"
                android:layout_marginBottom="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14px"
                    android:text="上课时间：周一到周五 18:00-20:00"
                    android:textColor="#373737"
                    android:textSize="29px" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="27px"
                    android:text="授课地点：XXXXX"
                    android:textColor="#373737"
                    android:textSize="29px" />

                <TextView
                    android:id="@+id/tv_coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="27px"
                    android:text="授课教练：Jones"
                    android:textColor="#373737"
                    android:textSize="29px" />

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="27px"
                    android:text="所在机构：祥达健身俱乐部"
                    android:textColor="#373737"
                    android:textSize="29px" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="78px"
                android:layout_marginTop="26px"
                android:layout_marginRight="78px"
                android:layout_marginBottom="28px"
                android:textSize="29px"
                android:text="备注：如果你无法简单的表达你的想法，那只能说明你不够了解他"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
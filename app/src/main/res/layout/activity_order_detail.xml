<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_hot_course"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/common_top_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/top_layout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="365px">

                <ImageView
                    android:id="@+id/iv_order_img"
                    android:layout_width="match_parent"
                    android:layout_height="365px"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_order_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_marginTop="56px"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Private Yoga"
                    android:textColor="@color/color_ffffff"
                    android:textSize="47px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10px"
                        android:layout_height="41px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:background="#F32E59" />

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14px"
                        android:layout_marginRight="20px"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="订单号：-------"
                        android:textColor="#373737"
                        android:textSize="34px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="34px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Total_amount_of_the_order"
                            android:textColor="#373737"
                            android:textSize="33px" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-------$"
                            android:textColor="#F32E59"
                            android:textSize="33px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="28px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Price_per_course"
                            android:textColor="#373737"
                            android:textSize="33px" />

                        <TextView
                            android:id="@+id/tv_shop_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-------$"
                            android:textColor="#777777"
                            android:textSize="33px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="38px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="27px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Purchase_quantities"
                            android:textColor="#373737"
                            android:textSize="33px" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="X-------"
                            android:textColor="#777777"
                            android:textSize="33px" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Reserved_name"
                        android:textColor="#373737"
                        android:textSize="33px" />

                    <TextView
                        android:id="@+id/tv_buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="------"
                        android:textColor="#373737"
                        android:textSize="33px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Mobile_number"
                        android:textColor="#373737"
                        android:textSize="33px" />

                    <TextView
                        android:id="@+id/tv_buyer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="------"
                        android:textColor="#373737"
                        android:textSize="33px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="30px">

                    <TextView
                        android:id="@+id/buyer_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/commant"
                        android:textColor="#373737"
                        android:textSize="33px" />

                    <TextView
                        android:id="@+id/tv_buyer_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="40px"
                        android:layout_toRightOf="@+id/buyer_remark"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="------"
                        android:textColor="#373737"
                        android:textSize="33px" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56px"
                android:layout_marginTop="36px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_left"
                        android:layout_width="10px"
                        android:layout_height="41px"
                        android:layout_marginLeft="20px"
                        android:background="#F32E59" />

                    <TextView
                        android:id="@+id/tv_course_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14px"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/tv_right"
                        android:layout_toRightOf="@+id/tv_left"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="课程名称：-------"
                        android:textColor="#373737"
                        android:textSize="35px" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@mipmap/iv_join"
                        android:gravity="center"
                        android:paddingLeft="23px"
                        android:paddingRight="23px"
                        android:text="@string/offline_training"
                        android:textColor="@color/color_ffffff"
                        android:textSize="21px" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_coach_img"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50px"
                        android:layout_marginLeft="28px"
                        android:layout_marginTop="68px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginRight="20px"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14px"
                                android:textSize="29px"
                                android:text="@string/Timetable"
                                android:textColor="#373737" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="-------"
                                android:textColor="#373737"
                                android:textSize="29px" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="授课地点：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />

                        <TextView
                            android:id="@+id/tv_coach_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="授课教练：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="所在机构：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28px"
                        android:layout_marginLeft="78px"
                        android:layout_marginRight="78px"
                        android:layout_marginTop="26px"
                        android:text="备注：如果你无法简单的表达你的想法，那只能说明你不够了解他"
                        android:textSize="29px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"
        android:paddingBottom="13px"
        android:paddingTop="12px"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="185px"
            android:layout_height="wrap_content"
            android:layout_marginRight="23px"
            android:layout_toLeftOf="@+id/tv_order_remark"
            android:background="@mipmap/iv_look_detail"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingTop="12px"
            android:text="@string/To_pay"
            android:textColor="@color/color_ffffff"
            android:textSize="29px" />

        <TextView
            android:id="@+id/tv_order_remark"
            android:layout_width="185px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37px"
            android:background="@mipmap/iv_no_remark"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingTop="12px"
            android:text="@string/Cancel_order"
            android:textColor="@color/color_ffffff"
            android:textSize="29px" />
    </RelativeLayout>
</RelativeLayout>
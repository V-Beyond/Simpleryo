<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_hot_course"
    android:orientation="vertical">

    <include layout="@layout/common_top_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10px"
                        android:layout_height="41px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:background="#F32E59" />

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14px"
                        android:text="订单号：-------"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#373737"
                        android:textSize="35px" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27px"
                    android:layout_marginLeft="34px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_course_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/tv_right"
                        android:layout_marginRight="20px"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14px"
                        android:text="课程名称：-------"
                        android:textColor="#373737"
                        android:textSize="35px" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="41px"
                        android:background="@mipmap/iv_join"
                        android:gravity="center"
                        android:paddingLeft="23px"
                        android:paddingRight="23px"
                        android:paddingTop="7px"
                        android:paddingBottom="7px"
                        android:text="线下授课"
                        android:textColor="@color/color_ffffff"
                        android:textSize="21px" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_my_course_detail_img"
                    android:layout_width="match_parent"
                    android:layout_marginRight="25px"
                    android:scaleType="fitXY"
                    android:layout_marginTop="27px"
                    android:layout_marginBottom="45px"
                    android:layout_marginLeft="25px"
                    android:layout_height="254px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56px"
                android:layout_marginTop="36px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_coach_img"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50px"
                        android:layout_marginLeft="28px"
                        android:layout_marginTop="68px"
                        android:layout_marginRight="45px"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_coach_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:text="授课教练：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="机构：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />
                        <TextView
                            android:id="@+id/tv_course_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="上课时间：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />

                        <TextView
                            android:id="@+id/tv_course_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginTop="27px"
                            android:text="上课方式：线下授课，授课地点：-------"
                            android:textColor="#373737"
                            android:textSize="29px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="800px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
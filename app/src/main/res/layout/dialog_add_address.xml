<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/shape_my"
        android:orientation="vertical"
        android:paddingLeft="50px"
        android:paddingRight="50px">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="新增地址"
                android:textColor="#515050"
                android:textColorHint="#a9a9a9"
                android:textSize="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contacts"
                        android:layout_width="75px"
                        android:layout_height="62px"
                        android:gravity="center_vertical"
                        android:textSize="25px"
                        android:textAlignment="center"
                        android:text="联系人" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="62px"
                            android:layout_marginLeft="10.5dp"
                            android:background="@drawable/shape_dialog_edittext"
                            android:hint="姓名"
                            android:paddingBottom="10px"
                            android:paddingLeft="20px"
                            android:paddingTop="10px"
                            android:textColor="#cacaca"
                            android:textSize="13.3sp" />

                        <RadioGroup
                            android:id="@+id/radio_group_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="10.5dp"
                            android:layout_marginTop="18.5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_button_mr"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_sex"
                                android:drawablePadding="10px"
                                android:text="先生"
                                android:textColor="#3A3A3A" />

                            <RadioButton
                                android:id="@+id/radio_button_mrs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20px"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_sex"
                                android:drawablePadding="10px"
                                android:text="女士"
                                android:textColor="#3A3A3A" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="75px"
                    android:layout_height="wrap_content"
                    android:textSize="25px"
                    android:layout_gravity="center_vertical"
                    android:text="电话" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.5dp"
                    android:background="@drawable/shape_dialog_edittext"
                    android:hint="手机号码"
                    android:paddingBottom="10px"
                    android:paddingLeft="20px"
                    android:inputType="number"
                    android:textColor="#cacaca"
                    android:paddingTop="10px"
                    android:textSize="13.3sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="75px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="25px"
                    android:text="地址" />

                <EditText
                    android:id="@+id/edittext_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.5dp"
                    android:background="@drawable/shape_dialog_edittext"
                    android:hint="选择收货地址"
                    android:paddingBottom="10px"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="20px"
                    android:textColor="#cacaca"
                    android:paddingTop="10px"
                    android:textSize="13.3sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_door_number"
                    android:layout_width="75px"
                    android:textSize="25px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="门牌号" />

                <EditText
                    android:id="@+id/edittext_house_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.5dp"
                    android:background="@drawable/shape_dialog_edittext"
                    android:hint="列：2号楼301室"
                    android:paddingBottom="10px"
                    android:textColor="#cacaca"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textSize="13.3sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="50px"
            android:paddingBottom="50px">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_cancel"
                android:gravity="center"
                android:paddingBottom="15px"
                android:paddingTop="15px"
                android:text="取消"
                android:textColor="@color/color_ffffff" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_register"
                android:gravity="center"
                android:paddingBottom="15px"
                android:paddingTop="15px"
                android:text="确定"
                android:textColor="@color/color_ffffff" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

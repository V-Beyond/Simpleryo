<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="价格区间"
        android:textColor="#FF383838"
        android:textSize="30px"
        android:layout_marginLeft="51px"
        android:layout_marginTop="51px"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36px"
        android:layout_marginLeft="67px"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edittext_low"
            android:layout_width="243px"
            android:hint="最低价"
            android:gravity="center"
            android:background="@drawable/price_edittext_bg"
            android:layout_height="68px" />
        <View
            android:layout_width="40px"
            android:layout_gravity="center_vertical"
            android:layout_height="4px"
            android:layout_marginLeft="44px"
            android:layout_marginRight="44px"
            android:background="#FF7D7D7D"></View>
        <EditText
            android:id="@+id/edittext_up"
            android:layout_width="243px"
            android:hint="最高价"
            android:gravity="center"
            android:background="@drawable/price_edittext_bg"
            android:layout_height="68px" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="36px"
        android:background="#F32E59"
        android:gravity="center"
        android:layout_marginTop="88px"
        android:layout_height="88px" />
</LinearLayout>
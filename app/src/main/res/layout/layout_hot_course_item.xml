<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_collection_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:alpha="0.2"
                android:layout_height="match_parent"
                android:background="@drawable/shape_course_gradient" />

            <TextView
                android:id="@+id/tv_collection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="48px"
                android:text="Private Yoga"
                android:textColor="@color/color_ffffff"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_popular"
                android:layout_marginLeft="26px"
                android:text="99$/hour"
                android:textColor="#FF006C"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_progress"
                android:visibility="gone"
                android:layout_marginBottom="4px"
                android:layout_marginLeft="28px"
                android:src="@mipmap/iv_collection" />

            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_progress"
                android:visibility="gone"
                android:layout_marginLeft="28px"
                android:layout_toRightOf="@+id/iv_collection"
                android:text="100 thousand people"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/percent_size" />

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_collection_count"
                android:layout_marginLeft="28px"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/horizontal_progressbar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="210px"
                    android:layout_height="4px"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_list_progress_drawable" />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/percent_size" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_collection_course"
                android:src="@mipmap/iv_course_item_uncollect"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="28px"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_collection_count"
                android:layout_width="wrap_content"
                android:text="2人收藏"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_collection_course"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginBottom="20px"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:text="1.2km"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="38px"
                android:visibility="gone"
                android:layout_marginRight="52px"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="38px"
                android:layout_marginRight="52px"
                android:background="@mipmap/iv_collection_bg">

                <ImageView
                    android:id="@+id/iv_collection_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/iv_collection_white_star" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_course_item_coupon"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/iv_course_item_coupon"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
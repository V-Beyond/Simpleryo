<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="424px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginLeft="22px"
            android:layout_marginTop="22px"
            android:layout_width="match_parent"
            android:layout_marginRight="22px"
            android:layout_height="312px">
            <ImageView
                android:id="@+id/iv_attention_img"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="312px" />
            <ImageView
                android:layout_above="@+id/horizontal_progressbar"
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_marginBottom="4px"
                android:layout_marginLeft="28px"
                android:src="@mipmap/iv_collection"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_store_follow_count"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8px"
                android:text="0 people"
                android:layout_marginBottom="4px"
                android:layout_above="@+id/horizontal_progressbar"
                android:layout_toRightOf="@+id/iv_collection"
                android:textSize="9sp"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <com.simpleryo.leyotang.view.ZzHorizontalProgressBar
                android:id="@+id/horizontal_progressbar"
                android:layout_marginLeft="28px"
                android:layout_width="210px"
                app:zpb_padding="0px"
                app:zpb_pb_color="#ff006a"
                app:zpb_bg_color="#1b1b1b"
                app:zpb_max="100"
                app:zpb_progress="0"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28px"
                android:layout_height="4px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:layout_marginTop="25px"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_my_attentoin_name"
                android:textColor="#656565"
                android:layout_width="match_parent"
                android:text="威尔士健身会所"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/tv_to_store_detail"
                android:textSize="25px"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_to_store_detail"
                android:background="@drawable/shape_register"
                android:textColor="@color/color_ffffff"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="19px"
                android:paddingRight="20px"
                android:paddingLeft="20px"
                android:paddingBottom="10px"
                android:paddingTop="10px"
                android:gravity="center"
                android:textSize="21px"
                android:text="查看详情"
                android:layout_height="47px" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
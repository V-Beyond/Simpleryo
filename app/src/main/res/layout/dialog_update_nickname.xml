<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:background="@drawable/shape_my"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="修改昵称"
                android:textColor="#515050"
                android:textSize="50px" />
            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:paddingLeft="20px"
                android:layout_marginTop="50px"
                android:paddingTop="20px"
                android:textSize="34px"
                android:paddingBottom="20px"
                android:textColorHint="#a9a9a9"
                android:textColor="#a9a9a9"
                android:hint="请输入新的昵称"
                android:background="@drawable/shape_register_edittext"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50px"
            android:background="@drawable/shape_cancel"
            android:gravity="center"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:text="取消"
            android:textColor="@color/color_ffffff" />
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50px"
            android:background="@drawable/shape_register"
            android:gravity="center"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:text="确定"
            android:textColor="@color/color_ffffff" />
    </RelativeLayout>
</LinearLayout>

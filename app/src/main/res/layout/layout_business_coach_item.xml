<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_coach_item"
        android:layout_height="358px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@+id/iv_coach_img"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/shape_coach_item_ll_bg"
                    android:minWidth="150px"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/iv_course_count"
                        android:drawablePadding="20px"
                        android:text="0"
                        android:textColor="@color/color_ffffff"
                        android:textSize="25px" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/shape_coach_item_ll_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <RatingBar
                        style="@style/coach_RadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="20px"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:minHeight="20px"
                        android:minWidth="20px"
                        android:rating="0"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text="0.0"
                        android:textColor="@color/color_ffffff"
                        android:textSize="25px" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_top">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="50px"
                    android:text="Score Hero"
                    android:textColor="@color/color_ffffff"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="15px"
                    android:lineSpacingExtra="15px"
                    android:scrollbars="none"
                    android:text="------"
                    android:textColor="@color/color_ffffff"
                    android:textSize="24px" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_coach_img"
            android:layout_width="170px"
            android:layout_height="341px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_collection_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/shape_course_gradient"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_collection_name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="34px"
                android:text="Private Yoga"
                android:textSize="23sp"
                android:layout_marginTop="28px"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26px"
                android:text="上课时间：上午9:00-3:00（每周一、三、五）"
                android:textSize="25px"
                android:layout_marginTop="12px"
                android:layout_below="@+id/tv_collection_name"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="26px"
                android:text="已完成：3/10课次"
                android:textSize="25px"
                android:layout_above="@+id/iv_collection"
                android:layout_marginBottom="12px"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_above="@+id/horizontal_progressbar"
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_marginBottom="4px"
                android:layout_marginLeft="28px"
                android:src="@mipmap/iv_collection"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8px"
                android:text="100 thousand people"
                android:layout_marginBottom="4px"
                android:layout_above="@+id/horizontal_progressbar"
                android:layout_toRightOf="@+id/iv_collection"
                android:textSize="9sp"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <com.simpleryo.leyotang.view.ZzHorizontalProgressBar
                android:id="@+id/horizontal_progressbar"
                android:layout_marginLeft="28px"
                android:layout_width="210px"
                app:zpb_padding="0px"
                app:zpb_pb_color="#ff006a"
                app:zpb_bg_color="#1b1b1b"
                android:layout_above="@+id/tv_to_course_detail"
                app:zpb_max="100"
                app:zpb_progress="30"
                android:layout_marginBottom="16px"
                android:layout_height="4px" />
            <TextView
                android:id="@+id/tv_to_course_detail"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23px"
                android:text="查看课程详情"
                android:textSize="25px"
                android:textColor="#F32E59"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_collection_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/shape_course_gradient"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_collection_name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="34px"
                android:text="Private Yoga"
                android:textSize="23sp"
                android:layout_marginTop="48px"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26px"
                android:text="99$/hour"
                android:textSize="19sp"
                android:layout_above="@+id/iv_collection"
                android:textColor="#00ABFF"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_above="@+id/horizontal_progressbar"
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_marginBottom="4px"
                android:layout_marginLeft="28px"
                android:src="@mipmap/iv_love_blue"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8px"
                android:text="100 thousand people"
                android:layout_marginBottom="4px"
                android:layout_above="@+id/horizontal_progressbar"
                android:layout_toRightOf="@+id/iv_collection"
                android:textSize="9sp"
                android:textColor="@color/color_ffffff"
                android:layout_height="wrap_content" />
            <com.simpleryo.leyotang.view.ZzHorizontalProgressBar
                android:id="@+id/horizontal_progressbar"
                android:layout_marginLeft="28px"
                android:layout_width="210px"
                app:zpb_padding="0px"
                app:zpb_pb_color="#00ABFF"
                app:zpb_bg_color="#1b1b1b"
                app:zpb_max="100"
                app:zpb_progress="30"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28px"
                android:layout_height="4px" />
            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="38px"
                android:layout_marginRight="52px"
                android:layout_alignParentRight="true"
                android:background="@mipmap/iv_collection_blue"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_collection_star"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/iv_collection_white_star"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
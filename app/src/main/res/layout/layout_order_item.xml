<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33px">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:text="----------"
                android:textColor="#373737"
                android:textSize="33px" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="52px"
                android:text="------"
                android:textColor="#989898"
                android:textSize="33px" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginRight="52px"
                android:padding="10px"
                android:src="@mipmap/iv_delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="20px"
            android:background="#B9B9B9"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="20px"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_order_img"
                android:layout_width="182px"
                android:layout_height="115px"
                android:layout_marginLeft="39px"
                android:layout_marginTop="33px"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:layout_marginTop="46px"
                android:layout_toRightOf="@+id/iv_order_img"
                android:text="----"
                android:textColor="#373737"
                android:textSize="33px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="52px"
                android:layout_marginTop="49px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--$"
                    android:textColor="#F32E59"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="x-"
                    android:textColor="#373737"
                    android:textSize="33px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13px"
            android:paddingTop="12px"
            android:background="#EEEEEE">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="185px"
                android:layout_height="wrap_content"
                android:layout_marginRight="23px"
                android:paddingBottom="12px"
                android:paddingTop="12px"
                android:layout_toLeftOf="@+id/tv_order_remark"
                android:background="@mipmap/iv_look_detail"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/color_ffffff"
                android:textSize="29px" />

            <TextView
                android:id="@+id/tv_order_remark"
                android:layout_width="185px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/iv_no_remark"
                android:paddingBottom="12px"
                android:paddingTop="12px"
                android:gravity="center"
                android:text="评价"
                android:layout_marginRight="37px"
                android:textColor="@color/color_ffffff"
                android:textSize="29px" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="37px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/iv_msg_buy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Johnny Appleseed"
                    android:textColor="#989898"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do siusmod tempor……"
                    android:textColor="#989898"
                    android:textSize="25px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="37px"
            android:background="#B9B9B9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="37px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/iv_msg_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Johnny Appleseed"
                    android:textColor="#989898"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do siusmod tempor……"
                    android:textColor="#989898"
                    android:textSize="25px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="37px"
            android:background="#B9B9B9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="42px"
            android:layout_marginTop="37px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/iv_msg_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
